<div class="omniauth">
	<% unless signed_in? %>
		<p><%= link_to("Sign in with Facebook", user_omniauth_authorize_path(:facebook)) %>
		<p><%= link_to("Sign in with VK", user_omniauth_authorize_path(:vkontakte)) %>
	<% else %>
		<p><%= link_to("Logout", "logout" , method: :delete) %></p>
	<% end %>
</div>
<% if signed_in? %>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<center>
			<%= form_for(@project, remote: true) do |f| %>
				<div class="col-md-8"><%= f.text_field :name, class: 'form-control' %></div>

				<div class="col-md-4"><%= f.submit "Add TODO List", class: "btn btn-primary"  %></div>
			<%end%>
			</center>
		</div>
		<div class="col-md-6 col-md-offset-3">
			<%= render 'shared/projects' %>
		</div>
	</div>
<% end %>